<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/articleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/articleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:padding="4dp"
        android:textSize="19dp"
        tools:text="текст" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="4dp"
        tools:text="дата" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@drawable/selector_like"
            android:paddingLeft="3dp"
            tools:text="кол-во лайков" />

        <Button
            android:id="@+id/commentButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="70.75dp"
            android:layout_height="33dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/coment"
            android:gravity="left"
            android:paddingLeft="1dp"
            android:textSize="11.6sp"
            tools:text="9999" />

    </LinearLayout>

</LinearLayout>